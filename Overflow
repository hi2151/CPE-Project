
#include <Adafruit_CircuitPlayground.h> 

int SensorPin=A0;
const int SIZE=10; // 10 readings over 5 seconds
double myArray[SIZE]; // temporary name for our data array

void setup() 
{
  Serial.begin(9600);    
  pinMode(SensorPin,INPUT);
}

void loop() {
  for (int i=0; i <SIZE; i++) 
  { 
    myArray[i] = digitalRead(SensorPin);     
    delay (500);
  } 
  Serial.print(findMax (myArray[], SIZE));
}

double findMax (double myArray[], int SIZE)
{
    double peakVal = 0;
    
    for (int i = 0; i < SIZE; i++){
        if (myArray[i] > peakVal){
            peakVal = myArray[i];
        }
    }
    
    return peakVal;
}
