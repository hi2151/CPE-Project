#include <Adafruit_CircuitPlayground.h> 

int SensorPin=A0;
const int SIZE=10; // will 10 readings be a good enough sample size or should we increase sample size?
double myArray[SIZE]; // what should we name the array? :\

void setup() {
  Serial.begin(9600);    
  pinMode(SensorPin,INPUT);
}

void loop() {
  for (int i=0; i <SIZE; i++) { // Is it okay to put the for loop here or should I put it in void setup()? 
    myArray[i] = digitalRead(SensorPin);     
    delay (5000);
  }
  while (true); 
}
